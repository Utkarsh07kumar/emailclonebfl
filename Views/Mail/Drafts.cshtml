@model IEnumerable<gmail.Models.Email>

@{
    ViewData["Title"] = "Drafts";
}

<h1>Drafts</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>To</th>
            <th>Subject</th>
            <th>Last Saved</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var email in Model)
        {
            <tr>
                <td>@email.To</td>
                <td>@email.Subject</td>
                <td>@email.SentDate</td>
                <td>
                    <a asp-action="Compose" asp-route-id="@email.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
